<h1>Hangman</h1>
<br>
<pre>
  ________________
  |               |
                  |
                  |
                  |
                  |
                  |
                  |
                  |
                  |
            ______|_____
</pre>

<% if @guesses.any? %>

<% @word.letterize.each do |letter| %>
  <% @guesses.each do |guess_letter| %>
    <% if guess_letter.guess == letter %>
      <%= letter %>
    <% else %>
    <%= "_" %>
  <% end %>
  <% end %>
<% end %>

<% else %>
  <% @word.letterize.each do |letter| %>
  <%= "_" %>
<% end %>
<% end %>


<h3>Enter a letter:</h3>

<form action="/guesses" method="post">
  <input id ="word_id" name ="word_id" type ="hidden" value="<%= @word.id %>">
  <label for="guess"></label>
  <input id = "guess" name= "guess" type="text">

  <button type="submit">Submit</button>
</form>
