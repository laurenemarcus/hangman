<h1>Hangman</h1>
<br>
<pre>
  ________________
  |               |
                  |
                  |
                  |
                  |
                  |
                  |
                  |
                  |
            ______|_____
</pre>

<% if @guesses.any? %>
  <% @word.letterize.each do |letter| %>
    <% success = false %>
    <% @guesses.each do |guess_letter| %>
      <% if guess_letter.guess == letter %>
        <%= letter %>
        <% success = true %>
      <% end %>
    <% end %>
    <% if success == false %>
      <%= "_" %>
    <% end %>
  <% end %>

<% else %>
  <% @word.letterize.each do |letter| %>
    <%= "_" %>
  <% end %>
<% end %>


<h3>Enter a letter:</h3>

<form action="/gallows/<%=@word.id %>" method="post">
  <label for="guess"></label>
  <input id = "guess" name= "guess" type="text" maxlength="1">

  <button type="submit">Submit</button>
</form>
